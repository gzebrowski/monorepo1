# =============================================================================
# SIMPLEBLOG MONOREPO - ENVIRONMENT VARIABLES
# =============================================================================

# Database Configuration
DATABASE_URL="postgresql://user:password@localhost:5432/simpleblog?schema=public"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRATION="7d"

# Backend Server Configuration
PORT=3001
NODE_ENV=development

# CORS Configuration
CORS_ORIGIN="http://localhost:3000"

# =============================================================================
# PUBLIC VARIABLES (accessible in frontend via process.env)
# Use NX_PUBLIC_ prefix for variables that should be available in browser
# =============================================================================

# API Configuration - accessible in both backend and frontend
NX_PUBLIC_API_URL="http://localhost:3001"
NX_PUBLIC_API_VERSION="v1"

# Frontend Configuration
NX_PUBLIC_APP_NAME="SimpleBlog"
NX_PUBLIC_APP_VERSION="1.0.0"
NX_PUBLIC_FRONTEND_URL="http://localhost:3000"

# Environment
NX_PUBLIC_NODE_ENV="development"

# Feature Flags (accessible in frontend)
NX_PUBLIC_ENABLE_REGISTRATION="true"
NX_PUBLIC_ENABLE_COMMENTS="true"
NX_PUBLIC_ENABLE_ANALYTICS="false"

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development Tools
ENABLE_SWAGGER="true"
LOG_LEVEL="debug"

# Database Development Settings
DB_LOGGING="true"
DB_SYNC="false"

# =============================================================================
# PRODUCTION OVERRIDES (uncomment and modify for production)
# =============================================================================

# NODE_ENV=production
# NX_PUBLIC_NODE_ENV=production
# NX_PUBLIC_API_URL="https://api.yourdomain.com"
# NX_PUBLIC_FRONTEND_URL="https://yourdomain.com"
# LOG_LEVEL="error"
# ENABLE_SWAGGER="false"