{
  "name": "simpleblog",
  "version": "1.0.0",
  "description": "Scalable blog application with NestJS, ReactJS, Prisma, and PostgreSQL",
  "private": true,
  "workspaces": [
    "apps/*",
    "libs/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd apps/backend && npm run start:dev",
    "dev:frontend": "cd apps/frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd apps/backend && npm run build",
    "build:frontend": "cd apps/frontend && npm run build",
    "db:migrate": "cd apps/backend && npm run db:migrate",
    "db:generate": "cd apps/backend && npm run db:generate",
    "db:seed": "cd apps/backend && npm run db:seed",
    "install:all": "npm install && cd apps/backend && npm install && cd ../frontend && npm install",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd apps/backend && npm run test",
    "test:frontend": "cd apps/frontend && npm run test"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "@types/node": "^20.8.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "author": "Your Name",
  "license": "MIT"
}