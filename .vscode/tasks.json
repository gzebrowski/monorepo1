{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Backend Dev Server",
            "type": "shell",
            "command": "cd apps/backend && npm run start:dev",
            "group": "build",
            "isBackground": true,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": {
                "pattern": [
                    {
                        "regexp": "^(.*):(\\d+):(\\d+) - (error|warning|info)\\s+(TS\\d+)\\s*:\\s*(.*)$",
                        "file": 1,
                        "line": 2,
                        "column": 3,
                        "severity": 4,
                        "code": 5,
                        "message": 6
                    }
                ],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*Starting.*$",
                    "endsPattern": "^.*started.*$"
                }
            }
        },
        {
            "label": "Start Frontend Dev Server",
            "type": "shell",
            "command": "cd apps/frontend && npm run dev",
            "group": "build",
            "isBackground": true,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": {
                "pattern": [
                    {
                        "regexp": "^(.*)\\((\\d+),(\\d+)\\):\\s+(error|warning|info)\\s+(.*)$",
                        "file": 1,
                        "line": 2,
                        "column": 3,
                        "severity": 4,
                        "message": 5
                    }
                ],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*building.*$",
                    "endsPattern": "^.*ready.*$"
                }
            }
        },
        {
            "label": "Database Migration",
            "type": "shell",
            "command": "cd apps/backend && npm run db:migrate",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true
            },
            "problemMatcher": []
        },
        {
            "label": "Generate Prisma Client",
            "type": "shell",
            "command": "cd apps/backend && npm run db:generate",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true
            },
            "problemMatcher": []
        },
        {
            "label": "Seed Database",
            "type": "shell",
            "command": "cd apps/backend && npm run db:seed",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true
            },
            "problemMatcher": []
        },
        {
            "label": "Build All",
            "type": "shell",
            "command": "npm run build",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true
            },
            "problemMatcher": ["$tsc"]
        },
        {
            "label": "Start Full Development Environment",
            "dependsOrder": "parallel",
            "dependsOn": [
                "Start Backend Dev Server",
                "Start Frontend Dev Server"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always"
            }
        }
    ]
}